{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nabudatel/core": ["packages/core/src"],
      "@nabudatel/core/*": ["packages/core/src/*"],
      "@nabudatel/ui": ["packages/ui/src"],
      "@nabudatel/ui/*": ["packages/ui/src/*"]
    }
  }
}