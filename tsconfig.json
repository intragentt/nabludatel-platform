{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nabludatel/*": ["packages/*"],
      "@nabludatel/ui": ["packages/ui/src"],
      "@nabludatel/ui/*": ["packages/ui/src/*"],
      "@nabludatel/core": ["packages/core/src"],
      "@nabludatel/core/*": ["packages/core/src/*"]
    }
  },
  "include": ["backend/**/*"],
  "exclude": ["node_modules"]
}